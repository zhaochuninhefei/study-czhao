<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <!--执行generator插件生成文件的命令： call mvn mybatis-generator:generate -e -->
    <!-- 引入配置文件 -->
    <properties resource="mybatis-generator/mybatisGeneratorinit.properties"/>
    <!-- 数据库驱动:选择你的本地硬盘上面的数据库驱动包-->
    <!--<classPathEntry  location="E:\maven_repo\repository\com\oracle\ojdbc6\11.2.0.4\ojdbc6-11.2.0.4.jar"/>-->
    <context id="MysqlTables" targetRuntime="MyBatis3">
        <!-- 生成的Java文件的编码 -->
        <property name="javaFileEncoding" value="UTF-8"/>
        <!-- 创建时间-更新时间自动设定插件 -->
        <plugin type="com.gcsoft.library.mybatis.generator.plugins.SqlMapXmlSystemDatePlugin">
            <!-- 标记"创建时间"列 -->
            <property name="createDateColumn" value="create_time"/>
            <!-- 标记"更新时间"列 -->
            <property name="updateDateColumn" value="update_time"/>
            <!-- 标记系统时间的函数 -->
            <property name="nowDateValue" value="now()"/>
        </plugin>
        <!-- 更新SQL列忽略插件 -->
        <plugin type="com.gcsoft.library.mybatis.generator.plugins.SqlMapXmlUpdateIgnorePlugin">
            <!-- 忽略的列 -->
            <property name="ignoreColumns" value="create_time,create_user"/>
        </plugin>
        <!-- Lombok插件 -->
        <plugin type="com.gcsoft.library.mybatis.generator.plugins.LombokPlugin"/>
        <!-- 注释：自定义注释类 -->
        <commentGenerator type="com.gcsoft.library.mybatis.generator.CommentGenerator">
            <property name="companyName" value="科大国创"/>
            <!--<property name="mapper.countByExample" value="\x0033测试x0567注释" />-->
        </commentGenerator>
        <!--数据库链接URL，用户名、密码 -->
        <jdbcConnection driverClass="${jdbc_driver}" connectionURL="${jdbc_url}" userId="${jdbc_user}"
                        password="${jdbc_password}"/>
        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>
        <!-- 生成模型的包名和位置-->
        <javaModelGenerator targetPackage="com.czhao.test.jdk11.db.po" targetProject="${project}">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>
        <!-- 生成映射文件的包名和位置-->
        <sqlMapGenerator targetPackage="com.czhao.test.jdk11.db.mapper" targetProject="${resources}">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>
        <!--生成DAO的包名和位置-->
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.czhao.test.jdk11.db.dao" targetProject="${project}">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>

        <!-- 要生成的表 tableName是数据库中的表名或视图名 domainObjectName是实体类名-->
        <table tableName="tb_org" enableCountByExample="true" enableUpdateByExample="true" enableDeleteByExample="true"
               enableSelectByExample="true" selectByExampleQueryId="true">
            <property name="useActualColumnNames" value="false"/>
            <!-- 数据库表主键 -->
            <generatedKey column="id" sqlStatement="Mysql" identity="true"/>
        </table>
        <table tableName="tb_employee" enableCountByExample="true" enableUpdateByExample="true"
               enableDeleteByExample="true" enableSelectByExample="true" selectByExampleQueryId="true">
            <property name="useActualColumnNames" value="false"/>
            <!-- 数据库表主键 -->
            <generatedKey column="id" sqlStatement="Mysql" identity="true"/>
        </table>
    </context>
</generatorConfiguration>